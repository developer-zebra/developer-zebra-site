parm:
  pivotal: No
  name: TriggerMode
  type: list
  list:
    - code: 3
      mx: "8.1"
      devicetype: A
      name: Do not change
      description: This value (or the absence of this parm from the XML) causes no change to device settings; any previously selected setting is retained.
    - code: 0
      devicetype: A
      name: Off
      mx: "8.1"
      description: Disables all automatic trigger-mode functions (default); all scanning requires manual triggering by the device user. 
    - code: 1
      devicetype: A
      name: Auto On
      mx: "8.1"
