parm:
  pivotal: No
  name: BluetoothOnOffControl
  type: list
  list:
    - code: 0
      mx: "8.1"
      devicetype: A
      name: Do not change
      description: This value (or the absence of this parm from the XML) causes no change to device settings; any previously selected setting is retained.
    - code: 1
      devicetype: A
      name: Enable
      mx: "8.1"
      description: Shows the Bluetooth On/Off button in the Device Central app on the device, which allows the device user to change the Bluetooth state (active/inactive). 
    - code: 1
